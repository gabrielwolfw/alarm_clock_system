#include "utils.h"
#include "altera_avalon_pio_regs.h"
#include "system.h"

// Simulación de almacenamiento en una variable global (esto es solo un ejemplo)
static alt_u32 stored_hours = 0;
static alt_u32 stored_minutes = 0;

void save_alarm_settings(alt_u32 hours, alt_u32 minutes) {
    // Aquí deberías agregar el código para almacenar la configuración en la memoria
    stored_hours = hours;
    stored_minutes = minutes;
}

void load_alarm_settings(alt_u32* hours, alt_u32* minutes) {
    // Aquí deberías agregar el código para cargar la configuración desde la memoria
    *hours = stored_hours;
    *minutes = stored_minutes;
}


